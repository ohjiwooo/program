<script>
   function setCookie(name, value, daysToLive) {
   var cookie = name + "=" + value;
   cookie += "; max-age=" + (daysToLive*24*60*60);
   document.cookie = cookie;
   }

   function fun(){
    document.cookie = "id" + "=; Max-Age = -1;";
    var a= document.getElementById("i").value;
    setCookie("id", a, "1");
   }
